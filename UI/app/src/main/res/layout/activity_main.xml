<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#04111D">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        android:background="#04111D">
        <!--        282C3D-->
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:shapeAppearanceOverlay="@style/Circular"
            android:background="#1C2831"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"

            app:strokeWidth="5dp" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/imgedt"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="145dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#1C2836"
            app:borderWidth="0dp"
            android:src="@drawable/ic_baseline_crop_original_24"
            app:tint="#E6FFFFFF"
            app:fabSize="mini"
            android:clickable="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layoutname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:background="#04111D"
                    android:textSize="16sp"
                    android:textColor="#7ED6D8E1" />

                <TextView
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="#E0E5EA"
                    android:text="Kathryn Murphy"
                    android:layout_below="@+id/txtname"
                    android:background="@drawable/details_divider"
                    android:id="@+id/txtnameval"
                    android:fontFamily="@font/newsreader" />

            </LinearLayout>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnName1"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#04111D"
                app:borderWidth="0dp"
                android:src="@drawable/ic_right"
                app:tint="#E6FFFFFF"
                app:fabSize="mini"
                android:clickable="true" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtpfname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preferred Name"
                    android:background="#04111D"
                    android:textSize="16sp"
                    android:textColor="#7ED6D8E1" />

                <TextView
                    android:paddingBottom="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#E0E5EA"
                    android:text="Kathryn"
                    android:layout_below="@+id/txtname"
                    android:background="@drawable/details_divider"
                    android:id="@+id/txtpfnameval"
                    android:fontFamily="@font/newsreader" />

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnpfname"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#04111D"
                app:borderWidth="0dp"
                android:src="@drawable/ic_right"
                app:tint="#E6FFFFFF"
                app:fabSize="mini"
                android:clickable="true" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Relation to Owner"
                    android:background="#04111D"
                    android:textSize="16sp"
                    android:textColor="#7ED6D8E1" />

                <TextView

                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#E0E5EA"
                    android:text="Spouse"
                    android:background="@drawable/details_divider"
                    android:id="@+id/txtrelationval"
                    android:fontFamily="@font/newsreader"
                    android:paddingBottom="10dp" />

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnrto"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#04111D"
                app:borderWidth="0dp"
                android:src="@drawable/ic_right"
                app:tint="#E6FFFFFF"
                app:fabSize="mini"
                android:clickable="true" />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>